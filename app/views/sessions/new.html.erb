<% provide :title, "Sign in" %>
<h1>Sign in</h1>

<%= form_for(:session,url:sessions_path) do |f| %>
	<p class="field"><%= f.label :email %><%= f.text_field :email %></p>
	<p class="field"><%= f.label :password %><%= f.password_field :password %></p>
	<p class="actions"><%= f.submit "Sign in" %></p>
<% end %>

<p>New user? <%= link_to "Sign up now!",signup_path %></p>